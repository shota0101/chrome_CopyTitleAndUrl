{
  "manifest_version": 3,
  "name": "CopyTitle and URL",
  "version": "1.2",
  "description": "Copy tab title and url as markdown.",
  "author": "Shota Hayashi",
  "homepage_url": "https://github.com/shota0101/chrome_CopyTitleAndUrl",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "browser_action.html",
    "default_title": "タイトルとURLをコピー"
  },
  "icons": {
    "16": "images/photocopier16.png",
    "48": "images/photocopier48.png",
    "128": "images/photocopier128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+D",
        "windows": "Alt+D",
        "mac": "Alt+D",
        "linux": "Alt+D"
      },
      "description": "タイトルとURLを直接コピー"
    }
  }
}
